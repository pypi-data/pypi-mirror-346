<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="email_compose_message_wizard_form" model="ir.ui.view">
        <field name="name">email_compose_message_wizard_form</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form" />
        <field name="arch" type="xml">
            <field name="subtype_id" position="after">
                <field name="is_redner_template" invisible="1" />
            </field>
            <xpath expr="//page[1]" position="attributes">
                <attribute name="invisible">is_redner_template</attribute>
            </xpath>
        </field>
    </record>
</odoo>
