<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_template_list_wizard_tree" model="ir.ui.view">
        <field name="name">template.list.wizard.list</field>
        <field name="model">template.list.wizard</field>
        <field name="arch" type="xml">
            <list string="External Templates" create="0" delete="0">
                <field name="name" readonly="1" />
                <field name="description" readonly="1" />
                <field name="preview" widget="image" options="{'size': [150, 150]}" />
                <button
                    string="Select"
                    type="object"
                    name="action_select_template"
                    class="oe_highlight"
                    context="{'template_id':name}"
                />
            </list>
        </field>
    </record>
</odoo>
