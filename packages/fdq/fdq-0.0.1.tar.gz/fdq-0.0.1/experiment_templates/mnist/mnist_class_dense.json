{
    "globals": {
        "project": "MNIST classifier",
        "author": "Marc",
        "parent": "mnist_parent.json",
        "set_random_seed": 33
    },
    "models": {
        "simpleNet": {
            "name": "/home/marc/dev/fonduecaquelon/src/networks/simpleNet.py",
            "nb_in_channels": 1,
            "nb_out_channels": 10,
            "input_shape": [
                28,
                28
            ],
            "optimizer": {
                "name": "adam",
                "lr": 0.001
            },
            "lr_scheduler": {
                "name": "step_lr",
                "step_size": 2,
                "gamma": 0.95
            }
        }
    },
    "train": {
        "train_loop": "~/dev/fonduecaquelon/experiment_templates/mnist/default.py",
        "args": {
            "epochs": 8,
            "use_GPU": false,
            "use_AMP": false,
            "accumulate_grad_batches": 1,
            "early_stop_val_loss": 5,
            "early_stop_train_loss": 5,
            "early_stop_nan": 5
        }
    },
    "losses": {
        "cp": {
            "name": "crossentropy",
            "reduction": "mean"
        }
    }
}