    uid : string
    {abstract} + proposeActions(sensors : palaestrai.Agent.SensorInforation[], actuators_available : palaestrai.Agent.ActuatorInformation[]) : palaestrai.agent.ActuatorInformation[]
    {abstract} + update(update)
}

