description: Testing lsmcli on local disks
tags+: [local]

/local_disk_list_success:
  description: Lists local disks using 'lsmcli local-disk-list'.
  tier: 1
  test: local_disk_list.py

/local_disk_ident_led_success:
  description: Blinks identification LED on local disks.
  tier: 1
  test: local_disk_ident_led.py

/local_disk_ident_led_fail:
  description: Fails blinking identification LED without disk.
  tier: 2
  test: local_disk_ident_led.py

/local_disk_fault_led_success:
  description: Blinks fault LED on local disks.
  tier: 1
  test: local_disk_fault_led.py

/local_disk_fault_led_fail:
  description: Fails blinking fault LED without disk.
  tier: 2
  test: local_disk_fault_led.py
