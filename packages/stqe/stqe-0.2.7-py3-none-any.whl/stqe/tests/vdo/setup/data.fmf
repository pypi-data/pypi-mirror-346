description: These are setup scripts to create and remove data files to be used in tests.
test: /vdo/setup/setup.py

/create_random_dd_file:
  description: Creates random data file using dd.
  message: Creating random data file /tmp/vdo_random_data.file using dd.
  requires_cleanup: vdo/setup/data/remove_file/data
  command: libsan.host.cmdline.run
  cmd: "dd if=/dev/urandom of=/tmp/vdo_random_data.file count=1800 bs=1M status=progress"

/remove_file:
  /data:
    description: Removes data file DATA_FILE.
    message: Removing DATA_FILE.
    command: os.remove
    path: DATA_FILE
